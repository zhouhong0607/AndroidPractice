<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
     <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="Emote_RadioB_style">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/message_rbtn_bg</item>
        <item name="android:paddingTop">4.0dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:button">@null</item>
        <item name="android:layout_weight">1.0</item>
    </style>

    <style name="Emote_RadioB_style.Text" parent="@style/Emote_RadioB_style">
        <item name="android:textSize">17.0sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="Emote_RadioB_style.Drawable" parent="@style/Emote_RadioB_style">
        <item name="android:drawablePadding">10.0dip</item>
    </style>
    
    <style name="Style_Scrollable">
        <item name="android:fadingEdge">none</item>
        <item name="android:scrollingCache">false</item>
        <item name="android:cacheColorHint">#00000000</item>
    </style>

</resources>
